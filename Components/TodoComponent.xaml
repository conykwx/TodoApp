<UserControl x:Class="TodoApp.Components.TodoComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TodoApp.Components"
             mc:Ignorable="d">

    <!--Блок з задачею-->
    <StackPanel Background="#eceeef" 
                Orientation="Horizontal"
                VerticalAlignment="Center">

        <!--Текст задачі-->
        <Label Content="Hello world"
               FontSize="26"
               x:Name="TitleLabel"
               Loaded="TitleLabel_Loaded"/>

        <!--Кнопка виконання задачі-->
        <Button Content="Complete"
                FontSize="20"
                Margin="0 0 15 0"
                Click="OnCompleteClick"
                x:Name="CompleteButton"/>

        <!--Кнопка видалення задачі-->
        <Button Content="Delete"
                FontSize="20"
                Click="OnDeleteClick"/>

    </StackPanel>
</UserControl>
